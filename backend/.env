# Tells Flask what file to run
FLASK_APP=app.py

# Enables debug mode (auto reload, better error msgs)
FLASK_ENV=development

# JWT secret for auth
JWT_SECRET_KEY=super-secret-jwt-key

# SQLite database for dev
DATABASE_URL=sqlite:///budgetbase.db

# PostgreSQL database for production
DATABASE_URL=postgresql://user:pass@localhost:5432/budgetbase_db
